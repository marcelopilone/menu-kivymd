<screen1>:
    id: elscreen

NavigationLayout:
    MDNavigationDrawer:
        NavigationDrawerIconButton:
            text: "Screen 1"
            on_release:
                screen_manager.current = "screen1"
        NavigationDrawerIconButton:
            text: "Screen 2"
            on_release:
                screen_manager.current = "screen2"
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Your app"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [['menu', lambda x: root.toggle_nav_drawer()]]
        ScreenManager:
            id: screen_manager
            Screen:
                name: "screen1"
                BoxLayout:
                    size_hint: .8,.8
                    pos_hint: {"center_x":.5,"center_y":.5}
                    spacing: dp(100)
                    orientation: 'vertical'
                    MDLabel:
                        text: "Aca subis todos los datos re piola"
                    MDTextField: 
                        name: "email_uno"
                        hint_text: "Email"
                        helper_text: "Ingresa tu email papa"
                        #helper_text_mode: "on_focus"
                        required: True
                    MDTextField: 
                        name: "email_dos"
                        hint_text: "Email"
                        helper_text: "Ingresa tu email papa"
                        helper_text_mode: "on_focus"
                        foreground_color: 1,0,1,1
                        max_text_lenght: 12
                    Button:
                        text: "JIJIJI"
                        on_release: screen1Local()

            Screen:
                name: "screen2"
                Label:
                    text: "Razon social: "

                BoxLayout:
                    size_hint: .8,.8
                    pos_hint: {"center_x":.5,"center_y":.5}
                    spacing: dp(100)
                    orientation: 'vertical'
                    MDTextField: 
                        hint_text: "Email"
                        helper_text: "Ingresa tu email papa"
                        helper_text_mode: "on_focus"
                BoxLayout:
                    size_hint: .8,.8
                    pos_hint: {"center_x":.5,"center_y":.10}
                    spacing: dp(100)
                    orientation: 'vertical'
                    MDTextField: 
                        hint_text: "Email"
                        helper_text: "Ingresa tu email papa"
                        helper_text_mode: "on_focus"                 